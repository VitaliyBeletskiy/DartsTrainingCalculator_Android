<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- style for ImageButtons in fragment_toss.xml-->
    <style name="toss_imagebutton_first_column_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="toss_imagebutton_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!--  <editor-fold desc="Toolbar style (connected directly to the toolbar in xml)">  -->
    <style name="DtcToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@color/black</item>
        <item name="android:theme">@style/DtcToolbarTheme</item>
    </style>

    <style name="DtcToolbarTheme">
        <!-- Color used for the title of the Toolbar - as long as not overridden -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">@color/white</item>
    </style>
    <!--  </editor-fold>  -->

    <style name="score_fragment_bottom_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/button_rounded_corners</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>